<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="userService" class="ua.epam.spring.hometask.impl.UserServiceImpl">
        <constructor-arg ref="usersDAO"/>
    </bean>

    <bean id="usersDAO" class="ua.epam.spring.hometask.data.UserDAO">
        <constructor-arg>
            <set>
                <ref bean="user1"/>
                <ref bean="user2"/>
                <ref bean="user3"/>
                <ref bean="user4"/>
            </set>
        </constructor-arg>
    </bean>

    <bean id="user1" class="ua.epam.spring.hometask.domain.User">
        <property name="id" value="1"/>
        <property name="firstName" value="Jan"/>
        <property name="lastName" value="Kowalski"/>
        <property name="email" value="jan_kow@gmail.com"/>
    </bean>

    <bean id="user2" class="ua.epam.spring.hometask.domain.User">
        <property name="id" value="2"/>
        <property name="firstName" value="John"/>
        <property name="lastName" value="Smith"/>
        <property name="email" value="jSmith@gmail.com"/>
    </bean>

    <bean id="user3" class="ua.epam.spring.hometask.domain.User">
        <property name="id" value="3"/>
        <property name="firstName" value="Ivan"/>
        <property name="lastName" value="Novak"/>
        <property name="email" value="ivan89@gmail.com"/>
    </bean>

    <bean id="user4" class="ua.epam.spring.hometask.domain.User">
        <property name="id" value="4"/>
        <property name="firstName" value="Peter"/>
        <property name="lastName" value="Light"/>
        <property name="email" value="pl_london@gmail.com"/>
    </bean>

</beans>