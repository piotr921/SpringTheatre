<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="auditoriumService" class=" ua.epam.spring.hometask.impl.AuditoriumServiceImpl">
        <constructor-arg>
            <set>
                <ref bean="auditorium1"/>
<!--                <ref bean="auditorium2"/>
                <ref bean="auditorium3"/>
                <ref bean="auditorium4"/>-->
            </set>
        </constructor-arg>
    </bean>

    <bean id="auditorium1" class="ua.epam.spring.hometask.domain.Auditorium">
        <property name="name" value="${small.name:0}"/>
        <property name="numberOfSeats" value="${small.numberOfSeats:0}"/>
        <property name="vipSeats" value="${small.vipSeats:0}"/>
    </bean>

    <bean id="auditoriumProperties" class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="location" value="file:E:\\Workspace\\SpringTheatre\\src\\test\\resources\\small.properties"/>
    </bean>
</beans>